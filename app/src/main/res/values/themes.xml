<resources>
    <!-- Base application theme. -->
    <style name="Theme.CreditCardScanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Custom View themes. -->
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/edit_text_margin</item>
        <item name="background">@color/app_background</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_small</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_small</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_small</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_small</item>
        <item name="boxStrokeColor">@color/blue_stroke</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorEnabled">false</item>
        <item name="hintEnabled">true</item>
        <item name="endIconMode">custom</item>
        <item name="endIconTint">@color/icon_color</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/padding_text</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:inputType">numberSigned</item>
    </style>

    <style name="PageHeadingStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


</resources>